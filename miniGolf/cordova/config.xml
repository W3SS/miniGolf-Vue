<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mini Golf</name>
    <description>
        Contador de tacadas.
    </description>
    <author email="sostenesfreitas@gmail.com" href="https://github.com/sostenesfreitas">
        SÃ³stenes freitas de andrade
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
      	<icon density="ldpi" src="res/android/ic_launcher_ldpi.png" />
      	<icon density="mdpi" src="res/android/ic_launcher_mdpi.png" />
      	<icon density="hdpi" src="res/android/ic_launcher_hdpi.png" />
      	<icon density="xhdpi" src="res/android/ic_launcher_xhdpi.png" />
      	<icon density="xxhdpi" src="res/android/ic_launcher_xxhdpi.png" />
	<icon density="xxxhdpi" src="res/android/ic_launcher_xxxhdpi.png" />
	<splash src="res/android/img.png" />	
     </platform>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="SplashScreenDelay" value="2000" />
    <plugin name="cordova-sqlite-storage" spec="~2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
</widget>
